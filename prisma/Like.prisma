model Like {
  id String @id @default(uuid())
  user User @relation("LikeToUser",fields: [userId], references: [id], onDelete: Cascade)
  userId String
  comment Comment? @relation("LikeToComment",fields: [commentId], references: [id], onDelete:  Cascade)
  commentId String?
  post Post? @relation("LikeToPost",fields: [postId], references: [id], onDelete:  Cascade)
  postId String? 

  @@map("like")
}

model User{
  id String @id
  like Like[] @relation("LikeToUser")
}

model Comment {
  id String @id
  like Like[] @relation("LikeToComment")
}
model Post {
  id String @id
  like Like[] @relation("LikeToPost")
}